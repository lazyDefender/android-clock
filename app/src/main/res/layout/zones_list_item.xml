<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="zone"
            type="com.example.clock.models.Zone" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alarm_list_item_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="72dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        >

        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            app:layout_constraintBottom_toTopOf="@+id/alarm_title_and_days"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@{zone.name}"/>

        <TextView
            android:id="@+id/alarm_title_and_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/alarm_time"
            app:layout_constraintTop_toBottomOf="@+id/alarm_time"
            android:text="@{zone.dateStr.toString()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>